comment "Video subsystem"

config VIDEO
	bool "Video Support"
	default n
	---help---
		Enables overall support for Video library.

if VIDEO

config VIDEO_DEV_PATH
	string "video device path"
	default "/dev/video"

source "video/videomode/Kconfig"

endif # VIDEO
